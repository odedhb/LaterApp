<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:background="#000"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/magic_bar"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Now"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:singleLine="true"
                android:fontFamily="sans-serif-thin"
                android:paddingBottom="2dp"
                android:textColor="#fff"
                android:onClick="setPage0"
                android:id="@+id/magic_bar_text_now"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Later"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:singleLine="true"
                android:fontFamily="sans-serif-thin"
                android:paddingBottom="2dp"
                android:textColor="#fff"
                android:onClick="setPage1"
                android:id="@+id/magic_bar_text_later"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Week"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:onClick="setPage2"
                android:singleLine="true"
                android:fontFamily="sans-serif-thin"
                android:paddingBottom="2dp"
                android:textColor="#fff"
                android:id="@+id/magic_bar_text_week"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="#fff"
            android:weightSum="1"
            android:id="@+id/magic_bar_indicator_holder"
            android:layout_height="wrap_content">

            <!--<View
                android:layout_width="0dp"
                android:background="#fff"
                android:layout_weight="0.5"
                android:id="@+id/magic_bar_indicator"
                android:layout_height="1px" />-->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>